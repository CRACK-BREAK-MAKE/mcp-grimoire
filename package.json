{
  "name": "@crack-break-make/mcp-grimoire",
  "version": "1.0.0",
  "description": "Your spellbook for MCP servers - intelligent orchestration with lazy loading and expert incantations",
  "main": "dist/index.js",
  "bin": {
    "grimoire": "./dist/cli.js",
    "mcp-grimoire": "./dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crack-break-make/mcp-grimoire.git"
  },
  "bugs": {
    "url": "https://github.com/crack-break-make/mcp-grimoire/issues"
  },
  "homepage": "https://github.com/crack-break-make/mcp-grimoire#readme",
  "scripts": {
    "prepare": "husky",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"docs/**/*.md\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"docs/**/*.md\" \"*.md\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:containers": "vitest run tests/cross-platform/container.test.ts --testTimeout=600000",
    "test:containers:watch": "vitest tests/cross-platform/container.test.ts --testTimeout=600000",
    "clean": "rm -rf dist coverage html",
    "clean:all": "rm -rf dist coverage node_modules pnpm-lock.yaml",
    "prepublishOnly": "pnpm run clean:all && pnpm install --frozen-lockfile && pnpm run type-check && pnpm run lint && pnpm run test && pnpm run build"
  },
  "lint-staged": {
    "*.ts": [
      "secretlint",
      "eslint --fix --max-warnings 0",
      "prettier --write"
    ],
    "*.{js,json,yaml,yml,md}": [
      "secretlint",
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ai",
    "tools",
    "grimoire",
    "spellbook",
    "orchestrator",
    "lazy-loading"
  ],
  "author": "I504180",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "@xenova/transformers": "^2.17.2",
    "chokidar": "^5.0.0",
    "commander": "^12.0.0",
    "env-paths": "^3.0.0",
    "msgpackr": "^1.11.8",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-aws": "^11.2.5",
    "@secretlint/secretlint-rule-gcp": "^11.2.5",
    "@secretlint/secretlint-rule-preset-recommend": "^11.2.5",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.5",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "secretlint": "^11.2.5",
    "testcontainers": "^11.11.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  }
}
